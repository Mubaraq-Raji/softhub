<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/background_1"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"

            >

            <ImageView
                android:id="@+id/lampImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lampImage"
                android:layout_marginTop="10dp"
                android:text="Lamps"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/subtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deviceName"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:text="smart socket"
                android:textColor="@android:color/white"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/deviceName"
                android:layout_marginBottom="-17dp"
                android:layout_marginStart="22dp"
                android:layout_toEndOf="@id/subtype"
                android:text="2 gangs"
                android:fontFamily="@font/comfortaa_light"
                android:textColor="@android:color/white"
                android:textSize="11sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="15dp"
                android:checked="true"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:paddingHorizontal="5dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</RelativeLayout>