<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blacky"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/roomHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="Add New Room"
        android:textColor="@color/recerver"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/roomHeader"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Name of new room"
            android:textColor="@color/recerver"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edit_room"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/room_name"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/green"
            android:cursorVisible="true"
            android:textColor="@color/recerver"
            android:hint=""
            android:paddingStart="10dp"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <include
            layout="@layout/item_divider"
            android:layout_below="@id/edit_device"
            android:layout_marginTop="15dp"
            android:layout_height="0.7dp"
            android:layout_width="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/recerver"
                android:text="Type of room"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/room_group_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                >
                <RadioButton
                    android:id="@+id/room1"
                    android:textColor="@color/recerver"
                    android:backgroundTint="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Living Room"

                    />
                <RadioButton
                    android:id="@+id/room2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/recerver"
                    android:text="BedRoom"

                    />
                <RadioButton
                    android:id="@+id/room3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/recerver"
                    android:text="Guest Room"

                    />

            </RadioGroup>


            <RadioGroup
                android:id="@+id/room_group_2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                >
                <RadioButton
                    android:id="@+id/room4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Children Room"
                    android:textColor="@color/recerver"

                    />
                <RadioButton
                    android:id="@+id/room5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/recerver"
                    android:text="Dining Room"

                    />
                <RadioButton
                    android:id="@+id/room6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kitchen"
                    android:textColor="@color/recerver"


                    />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/room_group_3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                >
                <RadioButton
                    android:id="@+id/room7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toilet"
                    android:textColor="@color/recerver"

                    />
            </RadioGroup>

        <include
            layout="@layout/item_divider"
            android:layout_below="@id/room_group_3"
            android:layout_marginTop="10dp"
            android:layout_height="0.7dp"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/roomButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/chat_text"
            android:text="Add Room"
            android:layout_marginBottom="10dp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />



    </LinearLayout>


</RelativeLayout>